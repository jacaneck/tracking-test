<body>
  <div class="loader"></div>
  <p>処理中です...</p>
  
  <script>
    const params = new URLSearchParams(window.location.search);
    const id = params.get('id');
    const apiUrl = 'https://script.google.com/macros/s/AKfycbzb1Exa6YvF55WwH413zhGe0r5DzHc-NnhbrskFezM1dzgxOgolOvc5R9Yq4UsaB77U/exec'; // 実際のURLに変更
    const redirectUrl = 'https://www.mapion.co.jp/d/admi/img/admi28.gif'; // リダイレクト先に変更
    
    if (id) {
      fetch(`${apiUrl}?id=${id}`, { mode: 'no-cors' })
        .then(() => {
          window.location.replace(redirectUrl);
        })
        .catch(() => {
          window.location.replace(redirectUrl);
        });
    } else {
      window.location.replace(redirectUrl);
    }
  </script>
</body>
